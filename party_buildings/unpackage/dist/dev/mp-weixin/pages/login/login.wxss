page {
  height: 100%;
  margin: 0;
  padding: 0;
  position: absolute;
}
.content {
  height: 100%;
  width: 100%;
}
.content .bg {
  height: 100%;
  width: 100%;
  position: absolute;
  overflow: hidden;
  z-index: -9999;
}
.content .bg .background {
  height: 100%;
  width: 100%;
  position: absolute;
  bottom: 0;
}
.content .login {
  width: 600rpx;
  height: 500rpx;
  margin-top: 400rpx;
  margin-left: 50%;
  left: -300rpx;
  position: absolute;
  z-index: 1;
  background-color: rgba(255, 255, 255, 0.5);
}
.content .login .text {
  position: relative;
  height: 80rpx;
  width: 500rpx;
  margin: auto;
  margin-top: 65rpx;
  border-radius: 30rpx;
  background-color: #FFFFFF;
}
.content .login .text input[type="text"],
.content .login .text input[type="password"] {
  height: 100%;
  width: 75%;
  margin-left: 30rpx;
}
.content .login .text .bgc {
  position: absolute;
  height: 25px;
  width: 25px;
  top: 20rpx;
  right: 30rpx;
  background-color: #fff;
  z-index: 100000;
}
.content .login .text .bgc image {
  width: 100%;
  height: 100%;
}
.content .login .text:first-child {
  margin-top: 80rpx;
}
.content .login .login_btn {
  width: 300rpx;
  height: 100rpx;
  margin-top: 40rpx;
  margin-left: 350rpx;
  font-weight: 600;
  font-size: 60rpx;
  position: relative;
  z-index: 1;
}
.content .login .register_btn {
  height: 100rpx;
  color: #888;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: normal;
  position: absolute;
  left: 50rpx;
  bottom: 6rpx;
  z-index: 1000;
}

