page {
  overflow: hidden;
  background-color: #C8C7CC;
}
page .information {
  height: 250rpx;
  width: 750rpx;
  background-color: #f4030a;
}
page .information .profile u-avatar {
  height: 100rpx;
  width: 100rpx;
  float: left;
  margin-top: 50rpx;
  margin-left: 50rpx;
}
page .information .name {
  float: left;
  margin-top: 50rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
  font-weight: 600;
}
page .information .identify {
  position: absolute;
  margin-top: 70rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #ccc;
  top: 30rpx;
  left: 131rpx;
}
page .information .users image {
  float: left;
  margin-top: 57rpx;
  margin-left: 30rpx;
  height: 40rpx;
  width: 50rpx;
}
page .operation {
  background-color: #F8F8F8;
  height: 1000rpx;
  overflow: auto;
}
page .operation .border {
  height: 100rpx;
  width: 600rpx;
  margin: 10rpx auto;
  background-color: #fff;
  border-radius: 50rpx;
  line-height: 100rpx;
  overflow: hidden;
}
page .operation .border button {
  float: left;
  width: 300rpx;
  height: 100rpx;
  background-color: #4CD964;
  color: #fff;
}
page .operation .line {
  width: 700rpx;
  border: 1rpx solid #ccc;
  height: 0rpx;
  margin: 5rpx auto;
}
page .operation .content {
  width: 100%;
  height: 100%;
  background-color: #fa3534;
}
page .operation u-button {
  position: absolute;
  bottom: 150rpx;
  width: 100%;
}

