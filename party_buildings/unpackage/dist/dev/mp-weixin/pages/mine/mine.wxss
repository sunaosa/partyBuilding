page {
  overflow: hidden;
  height: 1500rpx;
  background-color: #F8F8F8;
}
page .information {
  height: 350rpx;
  width: 750rpx;
  background-color: #ff7d0b;
}
page .information .profile u-avatar {
  height: 100rpx;
  width: 100rpx;
  float: left;
  margin-top: 50rpx;
  margin-left: 50rpx;
}
page .information .name {
  float: left;
  margin-top: 50rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
  font-weight: 600;
}
page .information .identify {
  position: absolute;
  margin-top: 70rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #ccc;
  top: 30rpx;
  left: 131rpx;
}
page .information .users image {
  float: left;
  margin-top: 57rpx;
  margin-left: 30rpx;
  height: 40rpx;
  width: 50rpx;
}
page .information-box {
  position: relative;
  height: 200rpx;
  top: 50%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
}
page .operation {
  height: 1000rpx;
  overflow: auto;
}
page .operation .border {
  height: 100rpx;
  width: 600rpx;
  margin: 10rpx auto;
  background-color: #fff;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  line-height: 100rpx;
  overflow: hidden;
}
page .operation .line {
  width: 700rpx;
  border: 1rpx solid #ccc;
  height: 0rpx;
  margin: 5rpx auto;
}
page .operation .content {
  width: 100%;
  height: 100%;
  background-color: #ff7d0b;
}
page .operation u-button {
  position: absolute;
  bottom: 150rpx;
  width: 100%;
}
.changeForm {
  width: 640rpx;
  margin: auto;
}
.form-title {
  width: 100%;
  margin: auto;
}
.operate-button {
  width: 500rpx;
  margin: 50rpx auto;
}
.location {
  margin-left: 60rpx;
}
.annouce-button {
  text-align: center;
  margin-top: 40rpx;
}
.text-count {
  position: absolute;
  right: 28rpx;
  bottom: 0rpx;
}
.chart {
  margin: 20rpx auto;
  height: 800rpx;
  width: 700rpx;
}
.clock-title {
  text-align: center;
  color: #C0C0C0;
}
.handle-refresh {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #ccc;
  line-height: 80rpx;
  text-align: center;
  right: 50rpx;
  bottom: 320rpx;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  -webkit-box-shadow: 0 0 10rpx 2rpx #C0C0C0;
          box-shadow: 0 0 10rpx 2rpx #C0C0C0;
  z-index: 10000;
}
.default {
  -webkit-transition: all 2s;
  transition: all 2s;
}
.rotate {
  -webkit-transform: rotate(360deg);
          transform: rotate(360deg);
  -webkit-transition: all 2s;
  transition: all 2s;
}
.administer-pop {
  position: relative;
  z-index: 1000000;
}
.announce {
  position: relative;
}

